{
  "name": "planning-poker-server",
  "version": "1.0.0",
  "description": "A planning poker server built with Node.js, Apollo GraphQL, and TypeScript",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon src/index.ts",
